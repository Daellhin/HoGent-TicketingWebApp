<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Ticketing</title>

	<!-- Scrollbar Custom CSS -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css">

	<!-- Font Awesome JS -->
	<link rel="stylesheet" href="//use.fontawesome.com/releases/v5.0.7/css/all.css">
	<!-- Bootstrap css-->
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<!--Personalized css-->
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<!--DataTables-->
	<link rel="stylesheet" href="~/lib/DataTables/DataTables-1.10.25/css/dataTables.bootstrap4.min.css" />
</head>
<body>
	<div class="wrapper">
		<!-- Sidebar Source: https://bootstrapious.com/p/bootstrap-sidebar  -->
		<nav id="sidebar">
			<div class="row">
				<div class="col text-center align-items-center">
					<img src="~/images/actemium-logo.png" alt=" " id="account-img" />
					<h5>@User.Identity.Name</h5>
					<form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
						<button type="submit" class="btn btn-link text-decoration-none"><i class="fas fa-sign-out-alt fa-fw"></i>Log Out</button>
					</form>
				</div>
			</div>

			<div id="dismiss">
				<i class="fas fa-arrow-left"></i>
			</div>

			<div class="border-top mt-4 pt-2">
				<h2>General</h2>
				<ul class="list-group">
					<li>
						<a class="pl-4 @((string) ViewData["activeLink"] == "Index" ? "active":"")" asp-controller="Home" asp-action="Index"><i class="fas fa-home fa-fw"></i> Home</a>
					</li>
					<li>
						<a class="pl-4 @((string) ViewData["activeLink"] == "Statistics" ? "active":"")" asp-controller="Statistiek" asp-action="Index"><i class="fas fa-chart-line fa-fw"></i> Statistics</a>
					</li>
					<li>
						<a class="pl-4 @((string) ViewData["activeLink"] == "Knowledge" ? "active":"")" href="#"><i class="fas fa-database fa-fw"></i> Knowledge Base</a>
					</li>
				</ul>

				<h2>Tickets</h2>
				<ul class="list-group">
					<li>
						<a class="pl-4 @((string) ViewData["activeLink"] == "CreateTicket" ? "active":"")" asp-controller="Ticket" asp-action="Create"><i class="fas fa-plus fa-fw"></i> Create Ticket</a>
					</li>
					<li>
						<a class="pl-4 @((string) ViewData["activeLink"] == "OpenTickets" ? "active":"")" asp-controller="Ticket" asp-action="Index"><i class="fas fa-sync fa-fw"></i> Open Tickets</a>
					</li>
					<li>
						<a class="pl-4 @((string) ViewData["activeLink"] == "ClosedTickets" ? "active":"")" asp-controller="Ticket" asp-action="ClosedTickets"><i class="fas fa-lock fa-fw"></i> Closed Tickets</a>
					</li>
				</ul>


				<h2>Contracts</h2>
				<ul class="list-group">
					<li>
						<a class="pl-4 @((string) ViewData["activeLink"] == "CreateContract" ? "active":"")" asp-controller="Contract" asp-action="Create"><i class="fas fa-plus fa-fw"></i> Create Contract</a>
					</li>

					<li>
						<a class="pl-4 @((string) ViewData["activeLink"] == "OpenContracts" ? "active":"")" asp-controller="Contract" asp-action="Index"><i class="fas fa-sync fa-fw"></i> Open Contracts</a>
					</li>
					<li>
						<a class="pl-4 @((string) ViewData["activeLink"] == "ClosedContracts" ? "active":"")" asp-controller="Contract" asp-action="ClosedContracts"><i class="fas fa-lock fa-fw"></i> Closed Contracts</a>
					</li>
				</ul>
			</div>

		</nav>

		<!-- Page Content  -->
		<div id="content">
			<button type="button" id="sidebarCollapse" class="btn btn-primary">
				<i class="fas fa-align-left"></i>
			</button>

			<div class="container px-1">
				<main role="main" class="pb-1">
					@if (TempData["messageTitle"] != null || TempData["message"] != null) {
						<div class="alert alert-success" role="alert">
							<h4 class="alert-heading">@TempData["messageTitle"]</h4>
							<p>@TempData["message"]</p>
						</div>
					}
					@if (TempData["errorTitle"] != null || TempData["error"] != null) {
						<div class="alert alert-warning" role="alert">
							<h4 class="alert-heading">@TempData["errorTitle"]</h4>
							<p>@TempData["error"]</p>
						</div>
					}
					@RenderBody()
				</main>
			</div>
		</div>
	</div>

	<!-- Dark Overlay element -->
	<div class="overlay"></div>

	<!-- jQuery -->
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<!-- DataTables.JS https://datatables.net/ -->
	<script src="~/lib/DataTables/datatables.min.js"></script>
	<script src="~/lib/DataTables/DataTables-1.10.25/js/dataTables.bootstrap4.min.js"></script>
	<!-- Popper.JS -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
	<!-- jQuery Custom Scroller CDN -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js"></script>
	<!-- Sidebar Scroller and Sidebar Collapse -->
	<script type="text/javascript">
		$(document).ready(function () {
			$("#sidebar").mCustomScrollbar({
				theme: "minimal"
			});

			$('#dismiss, .overlay').on('click', function () {
				// hide sidebar
				$('#sidebar').removeClass('active');
				// hide overlay
				$('.overlay').removeClass('active');
			});

			$('#sidebarCollapse').on('click', function () {
				if (screen.width > 768) {
					// Desktop slidable sidebar
					$('#sidebar, #content').toggleClass('active');
					$('.collapse.in').toggleClass('in');
					$('a[aria-expanded=true]').attr('aria-expanded', 'false');
				} else {
					// Mobile Sidebar overlay
					// open sidebar
					$('#sidebar').addClass('active');
					// fade in the overlay
					$('.overlay').addClass('active');
					$('.collapse.in').toggleClass('in');
					$('a[aria-expanded=true]').attr('aria-expanded', 'false');
				}
			});

			$(window).on('resize', function () {
				if ($(window).width() < 768) {
					$('#content').removeClass('active');
					$('#sidebar').removeClass('active');
				}
			});
		});

	</script>

	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
